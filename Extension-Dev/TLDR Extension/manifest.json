{
    "name": "TLDR",
    "version": "1.0",
    "description": "Get a brief synopsis of any article of your choosing!",
    "action":{
        "default_icon":{
            "96": "assets/icon96.png"
        },
        "default_title": "TLDR",
        "default_popup": "popup/popup.html"
    },
    "manifest_version": 3,
    "permissions":[
        "contextMenus", 
        "activeTab", 
        "scripting",
        "storage",
        "http://*/*", 
        "https://*/*"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "dist/background.bundle.js"
    },
    "icons":{
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "64": "assets/icon64.png"
    }

}